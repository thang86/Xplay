<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.popular_movie.PopularActivity">

    <LinearLayout
        android:id="@+id/layout_search_popular_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:background="@drawable/background_search_layout">

        <EditText
            android:id="@+id/ed_search_popular_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="26.3dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="21dp"
            android:textSize="14sp"
            android:lineSpacingExtra="1dp"
            android:textFontWeight="Regular"
            android:textColor="#959595"
            android:paddingTop="7.3dp"
            android:paddingBottom="6.9dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/background_edit_text_search"
            android:text="Search..."/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>